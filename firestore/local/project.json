{
  "name": "firestore-local",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "firestore/local/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/firestore/local",
        "main": "firestore/local/src/index.ts",
        "tsConfig": "firestore/local/tsconfig.lib.json",
        "assets": ["firestore/local/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "firestore/local/jest.config.ts"
      }
    }
  }
}
